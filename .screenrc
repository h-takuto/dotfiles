
autodetach on
bell_msg "^G"
defkanfi utf-8
defencoding utf-8
endoding utf-8 utf-8
#スクロールバッファは最大10000行にする
defscrollback 10000
#ctrl+aをctrl+jに変更
escape ^Jj
#スクリーンを起動した際のメッセージなし
startup_message off
vbell off
#ctrl+aのあとのキーイベントの配置を変更
bind n screen	#ターミナル起動
bind h prev		#表示するターミナルを変更（戻る）
bind j next		#表示するターミナルを変更（進む）
bind windowlist	#
#縦分割後移動し、起動
bind | eval 'split -v' focus screen
#横分割後移動し、起動
bind S eval 'split' focus screen

#hardstatus
hardstatus alwayslastline '%{= kw}%02c:%s %{= .y}%H %L=%{= .b}%-w%46>%{= .r}%n %t*%{= .b}%+w%-16<%=%{= .y}[%l]'
cption always "%?%F%{= wk}%:%{= ww}%?%-w%{=u Wk}%n %t%{-}%+w"
