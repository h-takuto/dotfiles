
autodetach on
bell_msg "^G"
defkanfi utf-8
defencoding utf-8
endoding utf-8 utf-8
#スクロールバッファは最大10000行にする
defscrollback 10000
#ctrl+aをctrl+jに変更
escape ^Jj
#スクリーンを起動した際のメッセージなし
startup_message off
vbell off
caption always "%{= wb} %-w%{=bu dr}%n %t%{-}%w %= %{=b wb}%y/%m/%d(%D) %{=b wm}%C"
#ctrl+aのあとのキーイベントの配置を変更
bind n screen	#ターミナル起動
bind h prev		#表示するターミナルを変更（戻る）
bind j next		#表示するターミナルを変更（進む）
bind windowlist	#
#縦分割後移動し、起動
bind | eval 'split -v' focus screen
#横分割後移動し、起動
bind S eval 'split' focus screen
#画面下部にscreenの状態を表示するようにする
hardstatus alwayslastline "%`%-w%{=b bw}%n %t%{-}%+w"
#screen名を、現在の使用コマンドにする
PS1='\033k\033\\[\u@\h \W]\$ '

